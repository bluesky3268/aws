{{>layout/header}}

<h1>게시판 </h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/board/save" role="button" class="btn btn-primary">글 등록</a>
            {{#userName}}
                logged in as : <span id = "user">{{userName}}</span>
                <a href="/logout" class="btn btn-info active" role="button">로그아웃</a>
                {{/userName}}
                {{^userName}}
                    <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">구글 로그인</a>
                    {{/userName}}
        </div>
    </div>
    <br/>
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>최종수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#boards}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/board/update/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/boards}}
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-6">
            <a href="/board/save" role="button" class="btn btn-primary">등록</a>
        </div>
    </div>
</div>

{{>layout/footer}}
