{{>layout/header}}

<h1>게시판 </h1>
<div class="col-md-12">
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>최종수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#boards}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/board/update/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/boards}}
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-6">
            <a href="/board/save" role="button" class="btn btn-primary">등록</a>
        </div>
    </div>
</div>

{{>layout/footer}}
